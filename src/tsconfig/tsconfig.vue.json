// 官方文档 https://www.typescriptlang.org/tsconfig
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    // vue 项目中，必须是preserve
    "jsx": "preserve",
    // 没有隐含的this。防止this指向错误
    "noImplicitThis": true,
    // Vite项目中必须开启
    "isolatedModules": true,
  }
}
